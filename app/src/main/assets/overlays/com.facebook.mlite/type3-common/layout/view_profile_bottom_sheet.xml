<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.facebook.mlite"
    android:id="@*com.facebook.mlite:id/view_profile_bottom_sheet_layout"
    android:background="@*com.facebook.mlite:color/background_floating_material_dark"
    android:backgroundTint="@*com.facebook.mlite:color/background_floating_material_dark"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@*com.facebook.mlite:id/open_facebook_profile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20.0dip"
        android:text="@*com.facebook.mlite:string/edit_profile_description"
        android:textColor="@*com.facebook.mlite:color/black_87a"
        android:textSize="@*com.facebook.mlite:dimen/text_size_large" />

    <android.support.v7.widget.SwitchCompat
        android:id="@*com.facebook.mlite:id/user_online_switch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20.0dip"
        android:textColor="@*com.facebook.mlite:color/black_87a"
        android:textSize="@*com.facebook.mlite:dimen/text_size_large"
        app:theme="@*com.facebook.mlite:style/MLiteSwitchCompat.control" />

    <android.support.v7.widget.SwitchCompat
        android:id="@*com.facebook.mlite:id/active_now_switch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20.0dip"
        android:text="@*com.facebook.mlite:string/active_now"
        android:textColor="@*com.facebook.mlite:color/black_87a"
        android:textSize="@*com.facebook.mlite:dimen/text_size_large"
        android:visibility="gone"
        app:theme="@*com.facebook.mlite:style/MLiteSwitchCompat.control" />
</LinearLayout>