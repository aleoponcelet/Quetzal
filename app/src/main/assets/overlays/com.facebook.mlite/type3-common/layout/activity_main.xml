<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.facebook.mlite"
    android:id="@*com.facebook.mlite:id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@*com.facebook.mlite:id/tabs"
        style="@*com.facebook.mlite:style/CoreUI.TabLayout"
        android:layout_width="fill_parent"
        android:layout_height="56dip"
        app:tabGravity="fill"
        app:tabMaxWidth="0.0dip"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@*com.facebook.mlite:id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@*com.facebook.mlite:color/activity_background" />
</LinearLayout>