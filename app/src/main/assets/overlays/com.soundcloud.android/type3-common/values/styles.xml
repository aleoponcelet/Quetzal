<?xml version="1.0" encoding="utf-8"?>
<resources>	
    <style name="Theme.ScDialog.Light" parent="@android:style/Theme.Holo.Dialog" />
    <style name="Theme.SoundCloud.NoActionBar" parent="@*com.soundcloud.android:style/Theme.SoundCloud">
        <item name="*com.soundcloud.android:windowActionBar">false</item>
        <item name="*com.soundcloud.android:windowNoTitle">true</item>
        <item name="*com.soundcloud.android:colorPrimaryDark">@*android:color/material_grey_800</item>
    </style>

    <style name="Card">
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@*android:drawable/dialog_holo_dark_frame</item>
        <item name="android:paddingLeft">@*com.soundcloud.android:dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@*com.soundcloud.android:dimen/card_padding_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>








    <style name="FooterToggle">
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@*com.soundcloud.android:drawable/btn_footer_play_toggle</item>
        <item name="android:layout_width">@*com.soundcloud.android:dimen/player_footer_control</item>
        <item name="android:layout_height">@*com.soundcloud.android:dimen/player_footer_control</item>
    </style>








    <style name="RecordTextChrono" parent="@*com.soundcloud.android:style/TextAppearance.SoundCloudLightNumberFont">
        <item name="android:textSize">@*com.soundcloud.android:dimen/rec_chronometer_text_size</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:includeFontPadding">false</item>
    </style>	
    <style name="TextAppearance.SoundCloudLightNumberFont" parent="@*com.soundcloud.android:style/TextAppearance">
        <item name="*com.soundcloud.android:custom_font">@*com.soundcloud.android:string/interstate_light_tnum</item>
    </style>
	
    <style name="Widget.Container" parent="@*com.soundcloud.android:style/Widget">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@*android:drawable/dialog_holo_dark_frame</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:baselineAligned">false</item>
    </style>
    <style name="Widget" />
    <style name="Divider.Background" parent="@*com.soundcloud.android:style/Divider">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">16.0dip</item>
    </style>
    <style name="ProductPageDivider">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_marginTop">16.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
    </style>
	







	

    <style name="PlaylistDiscovery.Tag" parent="@*com.soundcloud.android:style/PlaylistDiscovery">
        <item name="android:backgroundTint">@null</item>	
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@*android:color/holo_light_control_normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@*com.soundcloud.android:drawable/btn_tag</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Ak.EmptyViewContent" parent="@*com.soundcloud.android:style/Ak">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffaeaeae</item>
    </style>	
    <style name="Ak" />
    <style name="PlayerStrip">	
        <item name="android:backgroundTint">@null</item>	
        <item name="android:background">@*android:color/holo_light_control_normal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0dip</item>
    </style>
    <style name="PlayerIABAdArtwork">
        <item name="android:backgroundTint">@null</item>	
        <item name="android:layout_width">300.0dip</item>
        <item name="android:layout_height">250.0dip</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerInParent">true</item>
    </style>	

    <style name="Carousel.FooterItem" parent="@*com.soundcloud.android:style/Carousel">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffdddddd</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@*android:color/holo_purple</item>
        <item name="android:paddingLeft">36.0dip</item>
        <item name="android:paddingTop">32.0dip</item>
        <item name="android:paddingRight">36.0dip</item>
        <item name="android:paddingBottom">48.0dip</item>
    </style>
    <style name="Theme.SoundCloud.Launcher" parent="@*com.soundcloud.android:style/Theme.SoundCloud">
        <item name="android:backgroundTint">@null</item>	
	    <item name="android:windowShowWallpaper">false</item>		
        <item name="android:windowIsTranslucent">false</item>	
        <item name="android:windowBackground">@*com.soundcloud.android:drawable/launcher</item>
    </style>	
</resources>
