<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Drawer bg -->
	<style name="PlayDrawerList">
        <item name="android:background">@*android:color/background_material_dark</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:cacheColorHint">@*android:color/background_material_dark</item>
        <item name="android:divider">@null</item>
        <item name="android:choiceMode">none</item>
        <item name="android:layout_weight">1.0</item>
    </style>
	<!-- Drawer header email text color -->
	<style name="PlayDrawerProfileEmailText" parent="@*com.android.vending:style/PlayPlainText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
	<!-- Drawer selected page bg color, there is one in values-v21 -->
	<style name="PlayDrawerSelectedText" parent="@*com.android.vending:style/PlayDrawerBaseText">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@*android:color/background_dark</item>
    </style>

	<!-- Featured cards text color -->
	<style name="HighlightBannerOverlaySubtitle" parent="@*com.android.vending:style/PlayPlainText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingBottom">16.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">5.0</item>
    </style>
    <style name="PlayPlainText" />
	<style name="HighlightBannerOverlayTitle" parent="@*com.android.vending:style/PlayMediumPlainText">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">5.0</item>
    </style>

	<style name="Platform.AppCompat.Light" parent="@android:style/Theme">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorPrimaryDisableOnly">#ffffffff</item>
        <item name="android:textColorSecondary">#ffbfbfbf</item>
        <item name="android:textColorPrimaryInverse">#ffffffff</item>
        <item name="android:textColorSecondaryInverse">#ffffffff</item>
        <item name="android:windowNoTitle">true</item>
    </style>

