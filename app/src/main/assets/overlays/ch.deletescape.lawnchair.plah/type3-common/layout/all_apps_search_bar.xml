<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@*ch.deletescape.lawnchair.plah:id/search_container"
             android:layout_width="fill_parent"
             android:layout_height="@*ch.deletescape.lawnchair.plah:dimen/all_apps_search_bar_height" android:layout_gravity="center|top"
             android:orientation="horizontal"
             android:paddingTop="@*ch.deletescape.lawnchair.plah:dimen/all_apps_search_bar_margin_top"
             android:saveEnabled="false">
    <ch.deletescape.lawnchair.ExtendedEditText android:id="@*ch.deletescape.lawnchair.plah:id/search_box_input"
                                               android:layout_width="fill_parent"
                                               android:layout_height="fill_parent"
                                               android:layout_gravity="bottom"
                                               android:background="@android:color/transparent"
                                               android:focusableInTouchMode="true"
                                               android:gravity="center"
                                               android:hint="@*ch.deletescape.lawnchair.plah:string/all_apps_search_bar_hint"
                                               android:imeOptions="actionSearch|flagNoExtractUi"
                                               android:inputType="textCapWords|textNoSuggestions"
                                               android:maxLines="1"
                                               android:scrollHorizontally="true"
                                               android:textColor="#ddffffff"
                                               android:textColorHint="@*ch.deletescape.lawnchair.plah:drawable/all_apps_search_hint"
                                               android:textSize="16.0sp"/>
</FrameLayout>