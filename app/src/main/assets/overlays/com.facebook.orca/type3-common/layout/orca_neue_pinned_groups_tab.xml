<?xml version="1.0" encoding="utf-8"?>
<com.facebook.widget.CustomFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/com.facebook.orca"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    fb:traceAs="SpacesFragmentContainer">

    <com.facebook.widget.dragsortgridview.DragSortGridView
        android:id="@*com.facebook.orca:id/grid_view"
        style="@*com.facebook.orca:style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="@*android:color/material_grey_800"
        android:backgroundTint="@*android:color/material_grey_800"
        android:clipToPadding="false"
        android:columnWidth="@*com.facebook.orca:dimen/pinned_groups_card_width"
        android:fadingEdgeLength="0.0dip"
        android:horizontalSpacing="0.0dip"
        android:listSelector="#00000000"
        android:numColumns="auto_fit"
        android:overScrollMode="always"
        android:paddingBottom="4.0dip"
        android:paddingTop="4.0dip"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:stretchMode="none"
        android:verticalSpacing="0.0dip"
        fb:columnWidthCompat="@*com.facebook.orca:dimen/pinned_groups_card_width"
        fb:minNumColumns="2" />

    <LinearLayout
        android:id="@*com.facebook.orca:id/loading_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:orientation="vertical">

        <com.facebook.widget.listview.EmptyListViewItem
            android:id="@*com.facebook.orca:id/thread_list_loading_view"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:background="@*com.facebook.orca:color/msgr_material_main_fragment_background" />
    </LinearLayout>
</com.facebook.widget.CustomFrameLayout>
